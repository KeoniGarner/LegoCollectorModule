<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>lego-collector-module</artifactId>
        <groupId>LegoCollectorModule</groupId>
        <version>1.0.0</version>
    </parent>

    <artifactId>lego-collector-module-build</artifactId>

    <dependencies>
        <dependency>
            <groupId>LegoCollectorModule</groupId>
            <artifactId>lego-collector-module-client</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>LegoCollectorModule</groupId>
            <artifactId>lego-collector-module-common</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>LegoCollectorModule</groupId>
            <artifactId>lego-collector-module-designer</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>LegoCollectorModule</groupId>
            <artifactId>lego-collector-module-gateway</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.inductiveautomation.ignitionsdk</groupId>
                <artifactId>ignition-maven-plugin</artifactId>
                <version>1.0.12</version>

                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>modl</goal>
                        </goals>
                    </execution>
                </executions>

                <configuration>
                    <projectScopes>
                        <projectScope>
                            <name>lego-collector-module-client</name>
                            <scope>C</scope>
                        </projectScope>
                        <projectScope>
                            <name>lego-collector-module-common</name>
                            <scope>CDG</scope>
                        </projectScope>
                        <projectScope>
                            <name>lego-collector-module-designer</name>
                            <scope>CD</scope>
                        </projectScope>
                        <projectScope>
                            <name>lego-collector-module-gateway</name>
                            <scope>G</scope>
                        </projectScope>
                    </projectScopes>

                    <moduleId>lego-collector-module.lego-collector-module</moduleId>
                    <moduleName>${project.parent.name}</moduleName>
                    <moduleDescription>${project.description}</moduleDescription>
                    <moduleVersion>1.0.0</moduleVersion>
                    <requiredIgnitionVersion>7.8.0</requiredIgnitionVersion>

                    <hooks>
                        <hook>
                            <scope>C</scope>
                            <hookClass>pom.client.ClientHook</hookClass>
                        </hook>
                        <hook>
                            <scope>D</scope>
                            <hookClass>pom.designer.DesignerHook</hookClass>
                        </hook>
                        <hook>
                            <scope>G</scope>
                            <hookClass>pom.GatewayHook</hookClass>
                        </hook>
                    </hooks>

                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
